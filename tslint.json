{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "whitespace": [
            false,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-module",
            "check-type"
        ],
        "no-trailing-whitespace": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "no-var-keyword": false,
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "no-internal-module": true,
        "no-inferrable-types": true,
        "no-null-keyword": true,
        "prefer-const": true,
        "object-literal-sort-keys": false,
        "no-switch-case-fall-through": true,
        "triple-equals": true,
        "jsdoc-format": true,
        "member-access": false,
        "max-line-length": [
            false,
            140
        ],
        "trailing-comma": [
            false
        ],
        "interface-name": [
            false
        ],
        "arrow-parens": false,
        "ordered-imports": [
            false
        ]
    },
    "rulesDirectory": []
}